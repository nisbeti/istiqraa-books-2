<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span><span class="c5">حدثهم قال:</span> أنبأنا محمد بن إسماعيل بن سالم، أنبأنا علي بن مهران الطائي،<span class="c5"> نبأنا جرير بن عبد الحميد قال:</span> تأليف مصحف عبد الله بن مسعود: <span class="c2">(الطول)</span>: <span class="c2">(البقرة)</span>، و <span class="c2">(النساء)</span>، و <span class="c2">(آل عمران)</span>، و <span class="c2">(الأعراف)</span>، و <span class="c2">(الأنعام)</span>، و <span class="c2">(المائدة)</span>، و <span class="c2">(يونس)</span>.<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p2"></span>و<span class="c2">(المئين": (براءة)</span>، و <span class="c2">(النحل)</span>، و <span class="c2">(هود)</span>، و <span class="c2">(يوسف)</span>، و <span class="c2">(الكهف)</span>، و <span class="c2">(بني إسرائيل)</span>، و <span class="c2">(الأنبياء)</span>، و <span class="c2">(طه)</span>، و <span class="c2">(المؤمنين)</span>، و <span class="c2">(الشعراء)</span>، و <span class="c2">(الشعراء)</span>، و <span class="c2">(الصافات)</span>.<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p3"></span><span class="c2">(والمثاني)</span>: <span class="c2">(الأحزاب)</span>، و <span class="c2">(الحج)</span>، و <span class="c2">(القصص)</span>، و <span class="c2">(طس)</span>، <span class="c2">(والنمل)</span>، <span class="c2">(والنور)</span>، و <span class="c2">(الأنفال)</span>، و <span class="c2">(مريم)</span>، و <span class="c2">(العنكبوت)</span>، <span class="c2">(والروم)</span>، و <span class="c2">(يس)</span>، و <span class="c2">(الفرقان)</span>، و <span class="c2">(الحجر)</span>، و <span class="c2">(الرعد)</span>، و <span class="c2">(سبأ)</span>، و <span class="c2">(الملائكة)</span>، و <span class="c2">(إبراهيم)</span>، و <span class="c2">(ص)</span>، و <span class="c2">(الذين كفروا)</span>، و <span class="c2">(لقمان)</span>، و <span class="c2">(الزمر)</span>.<a href="#p3" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
